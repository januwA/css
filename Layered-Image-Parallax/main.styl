:root
  margin: 0;
  padding: 0;

body
  height: 100vh;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  background: radial-gradient(#303030, #0f0f0f);

.container
  position: relative;
  width: 361px;
  height: 698px;
  background: rgba(0, 0, 0, 0.2);
  transform: rotate(-30deg) skew(25deg) scale(0.8);
  margin-top: 150px;

  img
    position: absolute;
    width: 100%;

  img:nth-child(1)
    opacity: 1;
    z-index: 4;

  img:nth-child(2)
    opacity: .8;
    z-index: 3;

  img:nth-child(3)
    opacity: .6;
    z-index: 2;

  img:nth-child(4)
    opacity: .4;
    z-index: 1;
