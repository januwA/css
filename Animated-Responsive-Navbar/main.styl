text-primary = #b6b6b6;
text-secondary = #ececec;
bg-primary = #23232e;
bg-secondary = #141418;

:root
  font-size: 16px;
  font-family: 'Open Sans', sans-serif;

body
  color: #000;
  background-color: white;
  margin: 0;
  padding: 0;

  // 设置滚动条宽度
  &::-webkit-scrollbar
    width: 0.25rem;

  // 设置滚动条背景色
  &::-webkit-scrollbar-track
    background: #1e1e24;

  // 设置滚动条颜色
  &::-webkit-scrollbar-thumb
    background: #6649b8;

main
  margin-left: 5rem;
  padding: 1rem;

.navbar
  position: fixed;
  background-color: bg-primary;
  transition: width 0.2s ease;

  .navbar-nav
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    height: 100%;

    .item, .logo
      width: 100%;

      &:last-child
        margin-top: auto;

      .link
        display: flex;
        align-items: center;
        height: 5rem;
        color: text-primary;
        text-decoration: none;
        filter: grayscale(100%) opacity(0.7);
        transition: 0.2s;

        &:hover
          filter: grayscale(0%) opacity(1);
          background: bg-primary;
          color: text-secondary;

        .text
          display: none;

        .material-icons
          min-width: 2rem;
          margin: 0 1.5rem;
          color: #ff7eee;

    .logo
      font-weight: blob;
      text-transform: uppercase;
      margin-bottom: 1rem;
      text-align: center;
      letter-spacing: 0.3ch;
      width: 100%;
      text-decoration: none;

      .material-icons
        transform: rotate(0deg);
        transition: transform 0.2s;

        ^[0]:hover .logo .material-icons
          transform: rotate(-180deg);

@media only screen and (max-width: 600px)
  .navbar
    bottom: 0;
    height: 5rem;
    width: 100%;

    .navbar-nav
      flex-direction: row;

      .link
        justify-content: center;

  .logo
    display: none;

  main
    margin: 0;

@media only screen and (min-width: 600px)
  .navbar
    top: 0;
    width: 5rem;
    height: 100vh;

    &:hover .item .link .text
      display: block;

    &:hover .logo .link .text
      display: block;

    &:hover
      width: 16rem;
